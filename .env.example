# OpsAICortex Environment Example
# Copy to `.env` and fill with actual credentials for local/dev.

# ======================================
# Core
# ======================================
APP_NAME=OpsAICortex
ENVIRONMENT=development
DEBUG=True

# ======================================
# Database / Redis
# ======================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/opsai_db
REDIS_URL=redis://localhost:6379/0

# ======================================
# AI Providers
# ======================================
AI_PROVIDER=claude
CLAUDE_API_KEY=your_claude_key_here
OPENAI_API_KEY=your_openai_key_here

# ======================================
# Integrations
# ======================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
GITHUB_TOKEN=ghp_yourgithubtoken


# ======================================
# JWT Tokens
# ======================================
JWT_SECRET_KEY=your_super_secret_jwt_key
JWT_ALGORITHM=HS256